{
  "name": "openklaw",
  "version": "0.1.0",
  "description": "한국 사무직을 위한 로컬 AI 비서",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "validate": "pnpm run check && pnpm run lint && pnpm run test",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "postinstall": "node scripts/postinstall.js || true"
  },
  "bin": {
    "openklaw": "./bin/openklaw.js"
  },
  "files": [
    "bin/",
    "scripts/",
    "dist/",
    "README.md"
  ],
  "keywords": [
    "ai",
    "local-llm",
    "ollama",
    "korean",
    "desktop",
    "hwp"
  ],
  "author": "HariFatherKR",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/HariFatherKR/OpenKlaw.git"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@sveltejs/adapter-static": "^3.0.8",
    "@sveltejs/kit": "^2.20.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@tauri-apps/cli": "^2.0.0",
    "@types/node": "^22.0.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^9.0.0",
    "eslint-plugin-svelte": "^2.0.0",
    "globals": "^15.0.0",
    "jsdom": "^25.0.0",
    "postcss": "^8.4.0",
    "prettier": "^3.0.0",
    "prettier-plugin-svelte": "^3.0.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0",
    "vite": "^6.0.0",
    "vitest": "^2.0.0"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.0.0"
  }
}
