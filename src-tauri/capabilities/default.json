{
  "$schema": "https://schema.tauri.app/capability/2",
  "identifier": "default",
  "description": "Dubai Crab 기본 권한",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:allow-execute",
    "shell:allow-spawn",
    "global-shortcut:allow-register",
    "global-shortcut:allow-unregister",
    "fs:default",
    "fs:allow-read",
    "fs:allow-write",
    "fs:allow-exists",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-copy-file",
    {
      "identifier": "fs:scope",
      "allow": ["$TEMP/*", "$DOWNLOAD/*", "$DOCUMENT/*"]
    }
  ]
}
